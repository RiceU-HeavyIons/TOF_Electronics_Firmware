;*********************************************************
; Definitions for the CANHLP code
;*********************************************************

; Set the sync jump width. 
#define HLP_CAN_SJW 1
;

;;;;;;;;;; uncomment the correct line for the desired baud rate ;;;;;;;
; Set the prescalar - 1Mbit/s 
; #define HLP_CAN_PRESCALE 1
; Set the prescalar - 0.5Mbit/s 
#define HLP_CAN_PRESCALE 2
;
; Set phase segment 2 time select to be freely programmable:
;;;;; 18F8680 errata: this bit is inverted relative to the manual:
#define HLP_CAN_SEG2PHTS 0
;
; Set the wake-up filter 
#define HLP_CAN_WAKFIL 1
;
; Set phase segment 1 
#define HLP_CAN_SEG1PH 5
;
; Set phase segment 2 
#define HLP_CAN_SEG2PH 3
;
; Set propagation segment 
#define HLP_CAN_PRSEG 1
;
; Set sampling: 1 time
; #define HLP_CAN_SAM 0
; Set sampling: 3 times
#define HLP_CAN_SAM 0
;
; Set CAN Drive high bit
#define HLP_CAN_ENDRHI 1
;
; CAN message receive capture
#define HLP_CAN_CANCAP 1
;
; Set the filter 0 for the received CAN ID. 
#define HLP_CAN_RXF0 0x402
;
; Set the filter 1 for the received CAN ID. 
#define HLP_CAN_RXF1 0x404
;
; Set the mask 0 for the received CAN ID. 
#define HLP_CAN_RXM0 0xFFF
;
; Set the nodeID
#define HLP_CAN_NODEID 0x40


